{
  "name": "grafana-dashboards",
  "description": "My set of Grafana dashboards hosted on my k3s cluster",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": "https://github.com/briianpowell/grafana-dashboards.git",
  "author": {
    "name": "@BriianPowell",
    "email": "brian@powell.place",
    "url": "https://powell.place"
  },
  "scripts": {
    "prepare": "husky install",
    "prettier:write": "prettier '**/*.{json,ts,tsx}' --write",
    "prettier:check": "prettier '**/*.{json,ts,tsx}' --check",
    "lint": "eslint \"**/*.{json,js,ts}\"",
    "lint:fix": "eslint \"**/*.{json,js,ts}\" --fix"
  },
  "lint-staged": {
    "src/**/*.{json,ts,tsx}": [
      "npm run lint",
      "prettier:write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2"
  }
